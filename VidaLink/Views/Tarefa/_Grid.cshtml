@model IEnumerable<VidaLink.Models.TarefaViewModel>

@if (Model.Any())
{
    <table id="tblResultado" class="table table-striped table-hover table-bordered table-condensed">
        <thead>
            <tr>
                <th style="text-align:center;" class="center" title="Título">Título</th>
                <th style="text-align:center;" class="center" title="Descrição">Descrição</th>
                <th style="text-align:center;" class="center" title="Data Execução">Data Execução</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="center">
                    <td>@item.Titulo</td>
                    <td>@item.Descricao</td>
                    <td>@item.DataExecucao.Value.ToString("dd/MM/yyyy HH:mm")</td>
                    <td><button type="button" class="btn btn-sm btn-default readonly-optional" onclick="Excluir(@item.Id)"><i class="glyphicon glyphicon-trash"></i></button></td>
                </tr>
            }
        </tbody>
    </table>   
}
else
{
    <div class="well well-sm text-center">
        <i class="fa fa-info-circle"></i>A pesquisa não retornou nenhum resultado.
    </div>
}